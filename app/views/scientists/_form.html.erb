<% if !@scientist.errors.empty? %>
    <% @scientist.errors.full_messages.each do |msg| %>
        <%= msg %>
    <% end %>
<% end %>

<%= form_for @scientist do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %><br>
    <%= f.label :field_of_study, "Field of Study"%>
    <%= f.text_field :field_of_study %><br>
    <%= f.submit %>
    <% end %>