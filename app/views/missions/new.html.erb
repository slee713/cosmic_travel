<h1>Create New Mission!</h1>

<% if !@mission.errors.empty? %>
    <% @mission.errors.full_messages.each do |msg| %>
        <%= msg %>
    <% end %>
<% end %>

<%= form_for @mission do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %><br>
    <%= f.label :scientist_id, "Scientist:" %>
    <%= f.collection_select :scientist_id, Scientist.all, :id, :name %><br>
    <%= f.label :plant_id, "Planet:" %>
    <%= f.collection_select :planet_id, Planet.all, :id, :name %><br>
    <%= f.submit "Submit New Mission!" %>
    <% end %>